<h1>Odin Flight Booker</h1>

<%= form_for (@flight) do |f|%>

<%= f.collection_select(:airport_id, Airport.all, :id, :code, :prompt => "Departure") %>

<%= f.collection_select(:airport_id, Airport.all, :id, :code, :prompt => "Arrival") %>

<%= select_tag 'passengers', options_for_select([1,2,3,4]), :include_blank => true %>

<%= f.submit 'Search flights'%>

<% end %>