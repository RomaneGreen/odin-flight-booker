<h1 class='indexhead'>Odin Flight Booker</h1>

<div class="container1">

  <%= form_for(@flight, url: flights_path, method: :get,:html => { :style => 'color:red;' }) do |f|%>

  <%= f.collection_select(:departure, Departure.all, :code,:code, :prompt => "Departure",class: "formstyle") %>

  <%= f.collection_select(:airport, Airport.all, :code, :code, :prompt => "Arrival",class: "formstyle") %>

  <!-- strftime("%m/%d/%Y") -->
  <%= select_tag 'passengers', options_for_select([1,2,3,4]), :include_blank => false %>

  <%= select_tag "flight_dates", options_from_collection_for_select(Flight.all,:flight_date,:flight_date_formatted) %>

  <%= f.submit 'Search flights', :value => "Search flights",class: "btn btn-primary"%>

<% end %>
</div>
